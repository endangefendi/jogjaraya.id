<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.HomeFragment"
    android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_form_icon_date"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_date"
                    android:tint="@color/abu_tua"
                    android:background="@drawable/bg_form_icon_date"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_date_black"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/tgl_awal"
                    android:textColor="@color/abu_tua"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_toStartOf="@+id/sd"
                    android:layout_toLeftOf="@+id/sd"
                    android:layout_toEndOf="@+id/iv_date"
                    android:layout_toRightOf="@+id/iv_date"
                    android:background="@drawable/bg_form_editex"
                    android:focusable="false"
                    android:fontFamily="@font/helvetica"
                    android:hint="dd-MM-yyyy"
                    android:importantForAutofill="no"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/sd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:focusable="false"
                    android:fontFamily="@font/helvetica"
                    android:importantForAutofill="no"
                    android:padding="@dimen/_10sdp"
                    android:text="s/d"
                    android:textSize="@dimen/_12sdp"
                    android:tint="@color/abu_tua" />

                <EditText
                    android:id="@+id/tgl_akhir"
                    android:textColor="@color/abu_tua"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_toStartOf="@+id/iv_clear"
                    android:layout_toLeftOf="@+id/iv_clear"
                    android:layout_toEndOf="@+id/sd"
                    android:layout_toRightOf="@+id/sd"
                    android:focusable="false"
                    android:background="@drawable/bg_form_editex"
                    android:fontFamily="@font/helvetica"
                    android:hint="dd-MM-yyyy"
                    android:importantForAutofill="no"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_10sdp" />
                <ImageView
                    android:id="@+id/iv_clear"
                    android:tint="@color/abu_tua"
                    android:background="@drawable/bg_form_icon_date"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_replay_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frameWilayah"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_form_icon_date"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_map"
                    android:tint="@color/abu_tua"
                    android:background="@drawable/bg_form_icon_date"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_map_24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/et_nama_wilayah"
                    android:textColor="@color/abu_tua"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_toEndOf="@+id/iv_map"
                    android:layout_toRightOf="@+id/iv_map"
                    android:background="@drawable/bg_form_editex"
                    android:focusable="false"
                    android:fontFamily="@font/helvetica"
                    android:importantForAutofill="no"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Semua Wilayah"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_10sdp" />
                <ImageView
                    android:id="@+id/iv_wilayah"
                    android:tint="@color/abu_tua"
                    android:background="@android:color/white"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_more_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_form_icon_date"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/search_badge"

                    android:tint="@color/abu_tua"
                    android:background="@drawable/bg_form_icon_date"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_search_black"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/key"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_toStartOf="@+id/button_jelajah"
                    android:layout_toLeftOf="@+id/button_jelajah"
                    android:layout_toEndOf="@+id/search_badge"
                    android:layout_toRightOf="@+id/search_badge"
                    android:background="@drawable/bg_form_editex"
                    android:fontFamily="@font/helvetica"
                    android:hint="Masukkan kata kunci"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/abu_tua"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/button_jelajah"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="#343a40"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Cari"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    android:tint="@color/abu_tua" />

            </RelativeLayout>
        </LinearLayout>
    <FrameLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/_10sdp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_sugest"
            android:scrollbars="none"
            />
    </FrameLayout>
        <FrameLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            >

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/refresh"
                >
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_50sdp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"/>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_140sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="?attr/actionBarSize"
                            android:visibility="visible">

                            <include
                                android:id="@+id/lyt_no_item"
                                layout="@layout/no_item"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </FrameLayout>

    </LinearLayout>
