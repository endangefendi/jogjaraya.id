<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_3sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:clipToPadding="false"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_bold"
                android:lineSpacingExtra="5sp"
                android:maxLines="2"
                android:text="Judul"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/abu_tua"/>
            <ImageView
                android:id="@+id/gambar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/abu_tua"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/date"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_date_black"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:tint="@color/abu_tua"
                    />

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/date"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/date"
                    android:layout_toRightOf="@+id/date"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:text="tanggal"
                    android:maxLines="1"
                    android:textSize="@dimen/_8sdp" />

                <ImageView
                    android:id="@+id/lokasi_img"
                     android:layout_below="@id/tanggal"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_location_24dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:tint="@color/abu_tua"
                    />

                <TextView
                    android:id="@+id/lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tanggal"
                    android:layout_alignBottom="@+id/lokasi_img"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/date"
                    android:layout_toRightOf="@+id/date"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/helvetica"
                    android:maxLines="1"
                    android:text="lokasi"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/selengkapnya"
                    android:layout_below="@id/lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Selengkapnya"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginBottom="@dimen/_5sdp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/abu_tua"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
