<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.InfoFragment">
    <include layout="@layout/toolbar_info"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#EDEDED"
                />


            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/rv_info"
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:paddingRight="@dimen/_17sdp"
                    android:paddingLeft="@dimen/_17sdp"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/iv_info"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_info_pedia"
                        android:tint="@color/abu_tua"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:id="@+id/content_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/iv_info"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/iv_info">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/helvetica_bold"
                            android:text="Info"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_bold"
                            android:textSize="@dimen/_14sdp"
                            android:text="Profil"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_24dp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/abu_tua"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEDED"
                        android:layout_below="@id/content_info"
                        android:layout_marginTop="@dimen/_45sdp"
                        />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#EDEDED"
                />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/rv_darurat"
                style="@style/RippleStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:paddingRight="@dimen/_17sdp"
                    android:paddingLeft="@dimen/_17sdp"
                    android:background="@android:color/white">
                    <ImageView
                        android:id="@+id/iv_darurat"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_danger"
                        android:tint="@color/danger"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:id="@+id/content_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/iv_darurat"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/iv_darurat">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/helvetica_bold"
                            android:text="Info"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_bold"
                            android:textSize="@dimen/_14sdp"
                            android:text="Darurat"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_24dp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/abu_tua"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#EDEDED"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:paddingRight="@dimen/_17sdp"
                android:paddingLeft="@dimen/_17sdp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/loading_placeholder"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_bold"
                    android:singleLine="true"
                    android:text="OFFICE"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:textSize="@dimen/_14sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/abu_tua" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_telp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_phone_24dp"
                            android:tint="@color/abu_tua" />

                        <TextView
                            android:id="@+id/telp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helvetica_bold"
                            android:gravity="center"
                            android:autoLink="phone"
                            android:textColorLink="@color/colorPrimary"
                            android:text=""
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_email"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_email_24dp"
                            android:padding="@dimen/_6sdp"
                            android:tint="@color/abu_tua"
                            />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helvetica_bold"
                            android:gravity="center"
                            android:text=""
                            android:autoLink="email"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_web"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_web"
                            android:padding="@dimen/_6sdp"
                            android:tint="@color/abu_tua"
                            />

                        <TextView
                            android:id="@+id/tv_web"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helvetica_bold"
                            android:gravity="center"
                            android:text=""
                            android:autoLink="web"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_alamat"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_location_24dp"
                            android:padding="@dimen/_6sdp"
                            android:tint="@color/abu_tua"
                            />

                        <TextView
                            android:id="@+id/alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_bold"
                            android:layout_gravity="center"
                            android:text=""
                            android:lineSpacingExtra="7sp"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/abu_tua"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#EDEDED"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:paddingRight="@dimen/_17sdp"
                android:paddingLeft="@dimen/_17sdp"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica_bold"
                    android:singleLine="true"
                    android:text="Versi aplikasi"
                    android:textColor="@color/abu_tua"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/text_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/helvetica"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_11sdp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#EDEDED"
                />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:gravity="center"
                android:text="web"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:background="@color/abu_tua"
                android:lineSpacingExtra="7sp"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
